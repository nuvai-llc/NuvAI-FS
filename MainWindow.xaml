<Window x:Class="NuvAI_FS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NuvAI FS" Height="300" Width="420">
    <DockPanel>
        <!-- Toolbar / Menú superior -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Ayuda">
                <MenuItem Header="Buscar actualización"
                          Click="BuscarActualizacion_Click"/>
            </MenuItem>
        </Menu>

        <!-- Contenido -->
        <Grid Margin="12">
            <StackPanel>
                <TextBlock x:Name="TxtEstado" Text="Listo." />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
