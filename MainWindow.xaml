<Window x:Class="NuvAI_FS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NuvAI_FS"
        Title="NuvAI FS" Height="300" Width="420">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="UpdateBtn" Content="Actualizar"
                Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10" Padding="10,5"
                MinWidth="80" Click="UpdateBtn_Click"
                />

            <StackPanel HorizontalAlignment="Left"
                         VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" Margin="50,36,0,0">
                <TextBox x:Name="MainTxt" Height="30" Width="300"
                          Margin="10" HorizontalAlignment="Center"
                          VerticalAlignment="Center" />

                <Button 
                   x:Name="SubmitBtn" Content="Enviar"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="10" Padding="10,5"
                   MinWidth="80" Click="SubmitBtn_Click"
                   />
            </StackPanel>

        </Grid>
</Window>
