<Page x:Class="NuvAI_FS.src.Presentation.Views.WizardPages.SetupPathsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Rutas">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Indica las rutas necesarias de Factusol:"
                   FontWeight="SemiBold" />

        <StackPanel Grid.Row="2" x:Name="ContentStack" >
            <!-- Install -->
            <TextBlock Text="Selecciona la ruta de instalación de Factusol" Margin="0,0,0,6"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Input clicable -->
                <Border x:Name="BorderInstall"
                        Grid.Column="0" CornerRadius="3" BorderBrush="#DDD" BorderThickness="1"
                        Background="#FFF" Padding="6"
                        MouseLeftButtonUp="InstallInput_Click"
                        Cursor="Hand">
                    <DockPanel LastChildFill="True">
                        <!-- Icono dinámico: carpeta (neutro) / tick (válido) -->
                        <TextBlock x:Name="IconInstall"
                                   Text="&#xE8B7;"
                                   FontFamily="Segoe MDL2 Assets"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblInstall"
                                   Text=""
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>

                <!-- Botón carpeta -->
                <Button x:Name="BtnBrowseInstall"
                        Grid.Column="1"
                        Width="36" Height="32" Margin="8,0,0,0"
                        Click="BrowseInstall_Click" ToolTip="Examinar">
                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- Data -->
            <TextBlock Text="Selecciona la ruta de la carpeta de Datos de Factusol" Margin="0,12,0,6"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="BorderData"
                        Grid.Column="0" CornerRadius="3" BorderBrush="#DDD" BorderThickness="1"
                        Background="#FFF" Padding="6"
                        MouseLeftButtonUp="DataInput_Click"
                        Cursor="Hand">
                    <DockPanel LastChildFill="True">
                        <TextBlock x:Name="IconData"
                                   Text="&#xE8B7;"
                                   FontFamily="Segoe MDL2 Assets"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblData"
                                   Text=""
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>

                <Button x:Name="BtnBrowseData"
                        Grid.Column="1"
                        Width="36" Height="32" Margin="8,0,0,0"
                        Click="BrowseData_Click" ToolTip="Examinar">
                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>

            <TextBlock x:Name="LblValidation" Foreground="IndianRed" Visibility="Collapsed"
           Margin="0,8,0,0" TextWrapping="Wrap"/>
            <TextBlock x:Name="LblOk" Foreground="ForestGreen" Visibility="Collapsed"
           Margin="0,6,0,0" Text="Rutas validadas correctamente." />

            <!-- Selector de empresa (alineado con los demás) -->
            <StackPanel x:Name="CompanyBlock" Margin="0,16,0,0" Visibility="Collapsed">
                <TextBlock Text="Selecciona la empresa" Margin="0,0,0,6"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ComboBox estirado en la primera columna -->
                    <ComboBox x:Name="CmbCompany"
                          Grid.Column="0"
                          HorizontalAlignment="Stretch"
                          IsEnabled="False"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Path"
                          SelectionChanged="CmbCompany_SelectionChanged"/>

                     <!-- Columna 'dummy' para alinear con el botón de carpeta de los otros campos -->
                    <Button Grid.Column="1"
                        Width="36" MinHeight="10" Padding="10" Margin="8,0,0,0"
                        Visibility="Hidden"
                        IsHitTestVisible="False"/>
                        </Grid>

                     <TextBlock x:Name="LblCompanyHint"
                       Foreground="Gray"
                       Margin="0,6,0,0"
                       Visibility="Collapsed"
                       Text="No se han encontrado empresas en la carpeta FS. Revisa la ruta de instalación."/>
            </StackPanel>


            
        </StackPanel>

        <!-- Acciones del paso -->
        <DockPanel Grid.Row="4" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="BtnValidate" Content="Validar" Width="100" Click="BtnValidate_Click"/>
            </StackPanel>
        </DockPanel>

        
    </Grid>
</Page>
