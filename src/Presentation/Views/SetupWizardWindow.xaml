<!-- src/Presentation/Views/SetupWizardWindow.xaml -->
<Window x:Class="NuvAI_FS.src.Presentation.Views.SetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración inicial"
        Height="440" Width="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        UseLayoutRounding="True">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <!-- Frame -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Paso " FontWeight="SemiBold"/>
            <TextBlock x:Name="LblStepNumber" Text="1" FontWeight="SemiBold"/>
            <TextBlock Text=" de 2" Margin="2,0,0,0"/>
            <TextBlock Text=" — " />
            <TextBlock x:Name="LblStepTitle" Text="Rutas de Factusol" />
        </StackPanel>

        <!-- Contenido -->
        <Frame x:Name="WizardFrame" Grid.Row="2"
               NavigationUIVisibility="Hidden"
               JournalOwnership="OwnsJournal" />

        <!-- Acciones -->
        <DockPanel Grid.Row="4" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="BtnBack" Content="Atrás" Visibility="Hidden" Width="90" Margin="0,0,8,0"/>
                <Button x:Name="BtnNext" Content="Siguiente" IsEnabled="False" Width="100" />
                <Button x:Name="BtnFinish" Content="Finalizar" Width="100" Visibility="Collapsed" Margin="8,0,0,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
